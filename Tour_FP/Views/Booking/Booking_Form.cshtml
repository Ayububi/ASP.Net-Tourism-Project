@model Tour_FP.Models.Domain.CustomerDetail
@{
    ViewData["Title"] = "Booking_Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .header {
        background-color: darkgray;
    }
</style>


   
    <div class="row" style="padding-top:200px;">
        <div class="col-md-6 offset-md-3">
            <h2 class="mb-4">Customer Details</h2>
            <form method="post">
                @* Add an anti-forgery token for security *@
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label asp-for="FullName">Full Name:</label>
                <input asp-for="FullName" type="text" class="form-control" id="FullName" name="FullName" required>
                </div>

                <div class="form-group">
                    <label asp-for="Email">Email Address:</label>
                <input asp-for="Email" type="email" class="form-control" id="Email" name="Email" required>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber">Phone Number:</label>
                <input asp-for="PhoneNumber" type="tel" class="form-control" id="PhoneNumber" name="PhoneNumber" required>
                </div>

                <div class="form-group">
                    <label asp-for="Address">Address:</label>
                <textarea asp-for="Address" class="form-control" id="Address" name="Address" required></textarea>
                </div>

                <div class="form-group">
                    <label asp-for="NumberOfAdults">Number of Adults:</label>
                <input asp-for="NumberOfAdults" type="number" class="form-control" id="NumberOfAdults" name="NumberOfAdults" min="1" required>
                </div>

                <div class="form-group">
                    <label asp-for="NumberOfChildren">Number of Children:</label>
                <input asp-for ="NumberOfChildren" type="number" class="form-control" id="NumberOfChildren" name="NumberOfChildren" min="0">
                </div>

                <div class="form-group">
                    <label asp-for="PreferredStartDate">Preferred Start Date:</label>
                <input asp-for="PreferredStartDate" type="date" class="form-control" id="PreferredStartDate" name="PreferredStartDate">
                </div>

                <div class="form-group">
                    <label asp-for="PreferredEndDate">Preferred End Date:</label>
                <input asp-for="PreferredEndDate" type="date" class="form-control" id="PreferredEndDate" name="PreferredEndDate">
                </div>

                <div class="form-group">
                    <label asp-for="SpecialRequests">Special Requests:</label>
                <textarea asp-for="SpecialRequests" class="form-control" id="SpecialRequests" name="SpecialRequests"></textarea>
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Proceed to Payment</button>
            </form>
        </div>
    </div>
