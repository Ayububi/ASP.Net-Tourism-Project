@model IEnumerable< Tour_FP.Models.Domain.Admin_Dashboard>
@{
    ViewData["Title"] = "Index";
}

@*react_dom script*@
<script src="https://cdnjs.cloudflare.com/ajax/libs/react/16.13.0/umd/react.development.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/react-dom/16.13.0/umd/react-dom.development.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/remarkable/1.7.1/remarkable.min.js"></script>



    <article>
   
        <!--
          - #HERO
        -->
    <div id="HeroSection"></div>
    <script src="@Url.Content("~/js/HeroSection.jsx")"></script>

        <!--
          - #TOUR SEARCH
        -->
    <div id="TourSearch"></div>
    <script src="@Url.Content("~/js/TourSearch.jsx")"></script>
        
    <!--
      - #PACKAGE
    -->

    <section class="package" id="package">
        <div class="container">

            <p class="section-subtitle">Popular Packeges</p>

            <h2 class="h2 section-title">Checkout Our Packeges</h2>

            <p class="section-text">
                Fusce hic augue velit wisi quibusdam pariatur, iusto primis, nec nemo, rutrum. Vestibulum cumque laudantium.
                Sit ornare
                mollitia tenetur, aptent.
            </p>

            <ul class="package-list">
     
                @foreach (var item in Model)
                {
                    <li>
                        <div class="package-card">

                            <figure class="card-banner">
                                <img src="/Uploads/@item.Images" alt="Santorini Island's Weekend Vacation" loading="lazy">
                            </figure>

                            <div class="card-content">

                                <h3 class="h3 card-title">@item.Package_Title</h3>

                                <p class="card-text">
                                    @item.Description
                                </p>

                                <ul class="card-meta-list">

                                    <li class="card-meta-item">
                                        <div class="meta-box">
                                            <ion-icon name="time"></ion-icon>

                                            <p class="text">@item.NumberOfDays D/@(item.NumberOfDays - 1) N</p>
                                        </div>
                                    </li>

                                    <li class="card-meta-item">
                                        <div class="meta-box">
                                            <ion-icon name="people"></ion-icon>

                                            <p class="text">pax: @item.NumberOfPersons</p>
                                        </div>
                                    </li>

                                    <li class="card-meta-item">
                                        <div class="meta-box">
                                            <ion-icon name="location"></ion-icon>

                                            <p class="text">@item.CountryName</p>
                                        </div>
                                    </li>

                                </ul>

                            </div>

                            <div class="card-price">

                                <div class="wrapper">

                                    <p class="reviews">(@ViewBag.ReviewCountForDestination[item.DestinationId] reviews)</p>

                                    <div class="card-rating">
                                        <!-- Display rating stars -->
                                        @for (int i = 0; i < 5; i++)
                                        {
                                            @if (i < (int)ViewBag.AverageRatingForDestination[item.DestinationId])
                                            {
                                                <ion-icon name="star"></ion-icon>
                                            }
                                            else
                                            {
                                                <ion-icon name="star-outline"></ion-icon>
                                            }
                                        }
                                    </div>

                                </div>

                                <p class="price">
                                    $@(item.Price / 277)
                                    <span>/ per person</span>
                                </p>

                                <a asp-action="Destination_Detail" asp-route-Id="@item.DestinationId" asp-controller="Home" class="btn btn-secondary"> Book Now</a>

                            </div>

                        </div>
                    </li>
                }
            </ul>

            <button class="btn btn-primary">View All Packages</button>

        </div>
    </section>

        <!--
          - #POPULAR
        -->

        <section class="popular" id="destination">
            <div class="container">

                <p class="section-subtitle">Uncover place</p>

                <h2 class="h2 section-title">Popular destination</h2>

                <p class="section-text">
                    Fusce hic augue velit wisi quibusdam pariatur, iusto primis, nec nemo, rutrum. Vestibulum cumque laudantium.
                    Sit ornare
                    mollitia tenetur, aptent.
                </p>
            

                
                <ul class="popular-list">
              
                @foreach (var item in Model)
                {
                    <li>
                        <div class="popular-card">

                            <figure class="card-img">
                                <img src="/Uploads/@item.Images" alt="San miguel, italy" loading="lazy">
                            </figure>

                            <div class="card-content">

                                <div class="card-rating">
                                    <ion-icon name="star"></ion-icon>
                                    <ion-icon name="star"></ion-icon>
                                    <ion-icon name="star"></ion-icon>
                                    <ion-icon name="star"></ion-icon>
                                    <ion-icon name="star"></ion-icon>
                                </div>

                                <p class="card-subtitle">
                                    <a href="#">@item.CountryName</a>
                                </p>

                                <h3 class="h3 card-title">
                                    <a href="#">@item.Location</a>
                                </h3>

                                <p class="card-text">
                                    @item.Description
                                </p>

                            </div>

                        </div>
                    </li>
                }
                </ul>

                <button class="btn btn-primary">More destintion</button>

            </div>
        </section>

        <!--
          - #GALLERY
        -->

        <section class="gallery" id="gallery">
            <div class="container">

                <p class="section-subtitle">Photo Gallery</p>

                <h2 class="h2 section-title">Photo's From Travellers</h2>

                <p class="section-text">
                    Fusce hic augue velit wisi quibusdam pariatur, iusto primis, nec nemo, rutrum. Vestibulum cumque laudantium.
                    Sit ornare
                    mollitia tenetur, aptent.
                </p>

                <ul class="gallery-list">

                    <li class="gallery-item">
                        <figure class="gallery-image">
                            <img src="/images/gallery-1.jpg" alt="Gallery image">
                        </figure>
                    </li>

                    <li class="gallery-item">
                        <figure class="gallery-image">
                            <img src="/images/gallery-2.jpg" alt="Gallery image">
                        </figure>
                    </li>

                    <li class="gallery-item">
                        <figure class="gallery-image">
                            <img src="/images/gallery-3.jpg" alt="Gallery image">
                        </figure>
                    </li>

                    <li class="gallery-item">
                        <figure class="gallery-image">
                            <img src="/images/gallery-4.jpg" alt="Gallery image">
                        </figure>
                    </li>

                    <li class="gallery-item">
                        <figure class="gallery-image">
                            <img src="/images/gallery-5.jpg" alt="Gallery image">
                        </figure>
                    </li>

                </ul>

            </div>
        </section>

        <!--
          - #CTA
        -->

        <section class="cta" id="contact">
            <div class="container">

                <div class="cta-content">
                    <p class="section-subtitle">Call To Action</p>

                    <h2 class="h2 section-title">Ready For Unforgatable Travel. Remember Us!</h2>

                    <p class="section-text">
                        Fusce hic augue velit wisi quibusdam pariatur, iusto primis, nec nemo, rutrum. Vestibulum cumque
                        laudantium. Sit ornare
                        mollitia tenetur, aptent.
                    </p>
                </div>

                <button class="btn btn-secondary">Contact Us !</button>

            </div>
        </section>

    </article>




